<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_gradient_nature"
    android:fillViewport="true">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp">

    <!-- Header with close button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="20dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Детали объекта"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/detailCloseButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:contentDescription="Закрыть"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            app:fabSize="mini"
            app:tint="#080905" />
    </LinearLayout>

    <!-- Fragment Image with enhanced design -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="12dp"
        app:cardBackgroundColor="@color/card_bg_darker">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/detailFragmentImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:contentDescription="Изображение фрагмента" />

            <!-- Gradient overlay -->
            <View
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="bottom"
                android:background="@drawable/bg_fragment_overlay" />

            <!-- Confidence badge -->
            <TextView
                android:id="@+id/detailConfidenceBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|end"
                android:layout_margin="12dp"
                android:text="85%"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold"
                android:background="@drawable/bg_confidence_badge"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp" />

        </FrameLayout>

    </androidx.cardview.widget.CardView>

    <!-- Object Type with enhanced design -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="20dp"
        android:background="@drawable/bg_object_type_header"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🌳"
            android:textSize="24sp"
            android:layout_marginEnd="12dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/detailObjectTypeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Тип: Дерево"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/detailObjectSubtypeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Лиственное дерево"
                android:textColor="@color/nature_green_accent"
                android:textSize="14sp"
                android:layout_marginTop="2dp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Species Section -->
    <LinearLayout
        android:id="@+id/detailSpeciesSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/bg_info_section"
        android:layout_marginBottom="16dp"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:text="🌳"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Вид растения"
                android:textColor="@color/nature_green_accent"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:id="@+id/detailSpeciesText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Берёза повислая (80%)"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:lineSpacingExtra="2dp" />
    </LinearLayout>

    <!-- Season Section -->
    <LinearLayout
        android:id="@+id/detailSeasonSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/bg_info_section"
        android:layout_marginBottom="16dp"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:text="📅"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Сезон"
                android:textColor="@color/nature_green_accent"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:id="@+id/detailSeasonText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Осень"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/detailSeasonNoteText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Листья желтеют"
            android:textColor="@color/text_light"
            android:textSize="13sp" />
    </LinearLayout>

    <!-- Diseases Section -->
    <LinearLayout
        android:id="@+id/detailDiseasesSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/bg_info_section"
        android:layout_marginBottom="16dp"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:text="🦠"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Болезни"
                android:textColor="#FFB74D"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:id="@+id/detailDiseasesText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="• Мучнистая роса (40%)\n• Гниль (30%)"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:lineSpacingExtra="2dp" />
    </LinearLayout>

    <!-- Pests Section -->
    <LinearLayout
        android:id="@+id/detailPestsSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/bg_info_section"
        android:layout_marginBottom="16dp"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:text="🐛"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Вредители"
                android:textColor="#FFB74D"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:id="@+id/detailPestsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="• Короед (50%)\n• Листовертка (35%)"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:lineSpacingExtra="2dp" />
    </LinearLayout>

    <!-- Condition Section -->
    <LinearLayout
        android:id="@+id/detailConditionSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/bg_info_section"
        android:layout_marginBottom="16dp"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:text="⚕️"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Состояние"
                android:textColor="@color/nature_green_accent"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:id="@+id/detailConditionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Сухие ветки: 25%"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- Risk Section -->
    <LinearLayout
        android:id="@+id/detailRiskSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/bg_info_section"
        android:layout_marginBottom="16dp"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:text="⚠️"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Уровень риска"
                android:textColor="#FFB74D"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:id="@+id/detailRiskLevelText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Средний"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/detailRiskDriversText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="• Сухие ветки\n• Болезни"
            android:textColor="@color/text_light"
            android:textSize="13sp"
            android:lineSpacingExtra="2dp" />
    </LinearLayout>

    <!-- Data Quality Section -->
    <LinearLayout
        android:id="@+id/detailDataQualitySection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/bg_info_section"
        android:layout_marginBottom="20dp"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:text="ℹ️"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Качество данных"
                android:textColor="@color/text_light"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:id="@+id/detailDataQualityText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Общая уверенность: 70%\nЗамечания: Удалённый вид"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:lineSpacingExtra="2dp" />
    </LinearLayout>

</LinearLayout>

</ScrollView>

