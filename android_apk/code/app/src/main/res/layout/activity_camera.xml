<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient_nature"
    tools:context=".CameraActivity">

    <!-- Camera Preview -->
    <androidx.camera.view.PreviewView
        android:id="@+id/viewFinder"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Градиентный оверлей снизу -->
    <View
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/bg_camera_overlay"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- Top bar с градиентом -->
    <View
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@drawable/bg_camera_overlay"
        android:rotation="180"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Back button с улучшенным дизайном -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/backButtonCard"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        app:cardBackgroundColor="#B3FFFFFF"
        app:cardCornerRadius="24dp"
        app:cardElevation="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="12dp"
            android:contentDescription="Назад"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            app:tint="#080905" />
    </com.google.android.material.card.MaterialCardView>

    <!-- GPS координаты с красивым фоном -->
    <LinearLayout
        android:id="@+id/gpsContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/bg_gps_display"
        android:elevation="8dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="8dp"
            android:contentDescription="GPS иконка"
            android:src="@android:drawable/ic_menu_mylocation"
            app:tint="#4DFFFFFF" />

        <TextView
            android:id="@+id/locationTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:text="GPS: Определение..."
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:shadowColor="#000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2" />

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginStart="6dp"
            android:contentDescription="Обновить"
            android:src="@drawable/ic_refresh"
            app:tint="#99FFFFFF" />
    </LinearLayout>

    <!-- Подсказка под GPS -->
    <TextView
        android:id="@+id/gpsHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="20dp"
        android:text="Нажмите для обновления"
        android:textColor="#99FFFFFF"
        android:textSize="10sp"
        android:fontFamily="sans-serif-light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/gpsContainer" />

    <!-- Красивая кнопка захвата -->
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Пульсирующее кольцо эффект -->
        <View
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_capture_button"
            android:alpha="0.3" />

        <!-- Главная кнопка -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/captureButton"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:backgroundTint="@android:color/white"
            android:contentDescription="Сделать фото"
            android:elevation="12dp"
            android:scaleType="center"
            android:src="@drawable/ic_camera"
            app:borderWidth="4dp"
            app:fabCustomSize="80dp"
            app:maxImageSize="40dp"
            app:tint="@color/nature_green" />
    </FrameLayout>

    <!-- Декоративная рамка видоискателя (опционально) -->
    <View
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:background="@android:color/transparent"
        android:elevation="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>