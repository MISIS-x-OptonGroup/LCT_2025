<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="24dp"
    app:cardCornerRadius="24dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:background="@color/card_bg_dark">

        <!-- Title with icon -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@android:drawable/ic_menu_help"
                app:tint="@color/nature_green_accent" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:text="Инструкция"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:fontFamily="sans-serif-medium" />

        </LinearLayout>

        <!-- Instruction content -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="400dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Step 1 -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1️⃣ Сфотографируйте дерево"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Нажмите на кнопку с иконкой камеры и сделайте снимок дерева. Старайтесь снимать при хорошем освещении."
                    android:textSize="14sp"
                    android:textColor="@color/text_light"
                    android:layout_marginBottom="16dp" />

                <!-- Step 2 -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2️⃣ Просматривайте результаты"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="После обработки фото вы увидите информацию о деревьях, их состоянии и возможных болезнях."
                    android:textSize="14sp"
                    android:textColor="@color/text_light"
                    android:layout_marginBottom="16dp" />

                <!-- Step 3 -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="3️⃣ Изучайте карту"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Нажмите на карту, чтобы увидеть все сфотографированные деревья на карте с подробной информацией."
                    android:textSize="14sp"
                    android:textColor="@color/text_light"
                    android:layout_marginBottom="16dp" />

                <!-- Step 4 -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="4️⃣ История деревьев"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Кнопка 'Последние деревья' покажет все ранее сфотографированные деревья с детальной информацией."
                    android:textSize="14sp"
                    android:textColor="@color/text_light"
                    android:layout_marginBottom="8dp" />

            </LinearLayout>

        </ScrollView>

        <!-- Close button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/instructionCloseButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/nature_green_accent"
            android:text="Понятно"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textStyle="bold"
            app:cornerRadius="28dp"
            app:icon="@android:drawable/ic_menu_close_clear_cancel"
            app:iconGravity="start"
            app:iconTint="@android:color/white" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>

