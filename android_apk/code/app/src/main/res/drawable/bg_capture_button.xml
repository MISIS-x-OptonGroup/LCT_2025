<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Внешнее кольцо -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#FFFFFF" />
            <size
                android:width="80dp"
                android:height="80dp" />
        </shape>
    </item>
    <!-- Внутренний круг -->
    <item
        android:top="6dp"
        android:bottom="6dp"
        android:left="6dp"
        android:right="6dp">
        <shape android:shape="oval">
            <gradient
                android:angle="135"
                android:startColor="#5A8D77"
                android:endColor="#4A7D67"
                android:type="linear" />
        </shape>
    </item>
</layer-list>

